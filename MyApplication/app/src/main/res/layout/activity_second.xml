<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/HomeWorkm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HomeWork"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/tittle_background"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/zhuce"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:text="注册"
        android:drawableLeft="@drawable/fh"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/zhanghao_background"
        android:hint="请输入账号"
        android:drawableLeft="@drawable/yh"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:maxLength="8"
        android:textColorHint="#87C4DF"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/zhuce"
        app:layout_constraintStart_toStartOf="@id/zhuce"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edt3"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/zhanghao_background"
        android:hint="请输入密码"
        android:drawableLeft="@drawable/mm"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:inputType="textPassword"
        android:maxLength="8"
        android:textColorHint="#87C4DF"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt2"
        app:layout_constraintStart_toStartOf="@id/edt2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edt4"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:background="@drawable/zhanghao_background"
        android:hint="再次输入密码"
        android:drawableLeft="@drawable/mm"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:maxLength="8"
        android:inputType="textPassword"
        android:textColorHint="#87C4DF"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt3"
        app:layout_constraintStart_toStartOf="@id/edt3"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="注册"
        android:textSize="20dp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/edt4"
        app:layout_constraintStart_toStartOf="@id/edt4"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>